<%- layout('layouts/main') %>


<div class="container-fluid">
        <div class="col-12" >
          
          <form action="/clients/<%= clients._id %>" method="POST" class="col-4" style="margin: auto">
            
            <h2 style="text-align: center">Ingresa datos del cliente</h2>
            <div class="form-group">
              <h5>Rut</h5>
              
              <label class="form-control" name="rut" value="<%= clients._id %>"><%= clients._id %></label>
            </div>
            <div class="form-group">
              <h5>Nombre</h5>
              <input class="form-control" value="<%= clients.name %>" type="text" name="nombre" placeholder="nombre" required="true">
            </div>
            <div class="form-group">
              <h5>Apellido</h5>
              <input class="form-control" value="<%= clients.lastname %>" type="text" name="apellido" placeholder="apellido" required="true">
            </div>
            <div class="form-group">
              <h5>Direcci√≥n</h5>
              <input class="form-control" value="<%= clients.address %>" type="text" name="direccion" placeholder="direccion" required="true">
            </div>
            
            
            <button type="submit" class="btn btn-success">
              Actualizar
            </button>
            <br><br>

            <% if (!clients.alert) { %>
  
            <% } else { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong><%= clients.alert %></strong> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% } %>
            
          </form>
          
        </div>
        <%= clients.cantidad %>
      </div>